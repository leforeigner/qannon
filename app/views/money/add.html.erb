<h1 class="display-4 text-primary">Moneys#add</h1>
<p>※登録する項目データを入力してください。</p>
<%= form_for(@money, url:{controller:'moneys', action:'add'}) do |form| %>
    <div class="form-group">
        <label for="date">日付</label>
        <%= form.text_field :date, {class:"form-control"} %>
    </div>
    <div class="form-group">
        <label for="item">項目</label>
        <%= form.text_field :item, {class:"form-control"} %>
    </div>
    <div class="form-group">
        <label for="price">金額</label>
        <%= form.text_field :price, {class:"form-control"} %>
    </div>
    <div class="form-group">
        <label for="category">分類</label>
        <%= form.text_field :category, {class:"form-control"} %>
    </div>
    <div class="form-group">
        <label for="memo">コメント</label>
        <%= form.text_field :memo, {class:"form-control"} %>
    </div>
    <%= form.submit "保存" %>
<% end %>
<p class="link"><a href="/moneys">&lt;&lt; ※一覧に戻る</a><p>
